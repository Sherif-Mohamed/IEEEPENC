<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ieee.sites.ieeepenc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Home.HomeActivity" />
        <activity
            android:name=".About.AboutActivity"
            android:label="About">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home.HomeActivity" />
        </activity>
        <activity
            android:name=".FAQ.FAQActivity"
            android:label="Frequently Asked Questions">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home.HomeActivity" />
        </activity>
        <activity android:name=".Loading">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Home.HomeItem">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home.HomeActivity" />
        </activity>
        <activity android:name=".Program.Program">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home.HomeActivity" />
        </activity>
    </application>

</manifest>