<?xml version="1.0" encoding="utf-8"?><!-- RippleView thanks to traex
     to make the Ripple effect when clicked-->
<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ripple"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:rv_color="#434343"
    app:rv_rippleDuration="75"
    app:rv_type="rectangle">

    <TextView
        android:id="@+id/row_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:textColor="#000"
        android:textSize="14sp" />
</com.andexert.library.RippleView>